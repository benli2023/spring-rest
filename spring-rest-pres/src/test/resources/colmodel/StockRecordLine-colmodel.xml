<?xml version="1.0" encoding="UTF-8"?>
<column-models id="stockRecordLine">
	<profile id="stockRecordLine" default="true">
		<column-model>
			<header>产品ID</header>
			<name>productId</name>
			<width>50</width>
			<align>center</align>
		</column-model>
		<column-model>
			<header>产品名称</header>
			<name>productIdTxt</name>
			<width>100</width>
			<align>center</align>
		</column-model>
		<column-model>
			<header>价格</header>
			<name>price</name>
			<width>50</width>
			<align>center</align>
			<editor>
				<rules>
					<rule>
						<method>required</method>
						<value>true</value>
						<message>价格是必填的</message>
					</rule>
					<rule>
						<method>number</method>
						<value>true</value>
						<message>请填入数字</message>
					</rule>
				</rules>
				<type>text</type>
				<editable>true</editable>
				<name>price</name>
			</editor>
		</column-model>
		<column-model>
			<header>数量</header>
			<name>quantity</name>
			<width>50</width>
			<align>center</align>
			<editor>
				<rules>
					<rule>
						<method>required</method>
						<value>true</value>
						<message>数量是必填的</message>
					</rule>
				</rules>
				<type>omNumberField</type>
				<editable>true</editable>
				<name>quantity</name>
			</editor>
		</column-model>
		<column-model>
			<header>是否有发票</header>
			<name>haveInvoice</name>
			<width>100</width>
			<align>center</align>
		</column-model>
		<column-model>
			<header>发票号</header>
			<name>invoiceNumber</name>
			<width>100</width>
			<align>center</align>
		</column-model>
	</profile>
</column-models>